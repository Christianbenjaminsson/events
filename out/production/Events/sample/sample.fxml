<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="sample.Controller" alignment="center" hgap="10" vgap="10">
    <Textfield fx:id"nameField" Gridpane.rowindex="0" Gridpane.columindex="0"/>
    <Button fx:id="helloButton" text="Say Hello" Gridpane.rowindex="1" Gridpane.columindex="0"
        onAction="#onButtonClicked"/>
    <Button fx:id="byeButton" text="Say Bye" gridpane.rowindex="1" GRidpane.columnindex="1"
            onAction="#onButtonClicked" />
</GridPane>